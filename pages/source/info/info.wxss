/* pages/source/info/info.wxss */
.container{
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  width:98%;
  align-items:center; 
  position: relative;
}
.imginfo{
  text-align: center;
  background-color: white;
  width: 100%;
 
}
.txttitle{
  display:flex;
  flex-direction: column;
  width: 100%;
  background-color: white;
  
}
.titleinfo{
  font-size: 16pt;
  width: 98%;
  padding-left: 4px;
 
}
.titleotherinfo{
  display: flex;
  flex-direction: row;
  width: 98%;
  padding-left: 4px;
  padding-right: 4px;
  margin-bottom:10px; 
  margin-top:8px; 
}
.titlefenlei{
  width: 40%;
  font-size: 10pt;
  color: #E15D29;
  text-align: left;

}
.titleri{
  width: 60%;
  font-size: 10pt;
  color: #E15D29;
  text-align: right;
}
.titleContent{
  
  line-height: 22pt;
  width:98%;
  background-color: white;
  padding-left: 4px;
  padding-right: 4px;
  margin-top: 2px;
  padding-top: 8px;
  padding-bottom: 8px;
  text-align:justify; 
  font-size: 14pt;
}

.line{
  width:98%;
  height: 1px;
  background-color: #888888; 
}
.tools{
  position:fixed;
  height: 40px;
  width: 100%;
  background-color: white;
  bottom:0px;
  padding-left: 4px;
  padding-right: 4px;
  align-items: center;
  text-align: center;
}
.toolcontent{
  display: flex;
  flex-direction: row;
  width: 98%;
  align-items:center;
  justify-content: flex-end;
 
}
.yulan{
  width: 15%;
  text-align:center;
  justify-content:center;
 
}
.yulan1{
  width: 8%;
  text-align:center;
  font-size: 10pt;
  color: #E15D29;

}
.typetxt{
  margin-top: 2px;
  text-align: left;
  width:100%;
  font-size: 12pt;
  color:#333333; 
  background-color: white;
  display:flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center; 
  padding-top: 6px;
}
.typeimg{
  width: 6%;
  text-align: left;
  padding-left: 4px;
}
.typeurl{
  background-color: white;
  width: 100%;
  font-size: 10pt;
  color: #333333;
  height: 34px;
  display: flex;
  justify-content:flex-start;
  align-items:center;
  text-align:left;
  padding-left: 4px;
}
.typecontent{
  padding-left:2px;
}